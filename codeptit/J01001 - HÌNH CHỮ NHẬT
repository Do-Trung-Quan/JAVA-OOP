import java.io.*;
import java.util.*;

public class Solution {
    static void res(int a, int b){
        if(a<=0 || b<=0) System.out.println(0);
        else{
            System.out.println((a+b)*2 + " " + (a*b));
        }
    }
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int a = in.nextInt();
        int b = in.nextInt();
        res(a, b);
    }
}
    
