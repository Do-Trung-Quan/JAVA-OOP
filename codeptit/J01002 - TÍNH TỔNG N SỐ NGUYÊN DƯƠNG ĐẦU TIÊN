import java.io.*;
import java.util.*;

public class Solution {
    static void res(long n){
        long res = (1+n)*n / 2;
        System.out.println(res);
    }
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        int t = in.nextInt();
        for(int i=1;i<=t;i++){
            long n = in.nextLong();
            res(n);
        }
    }
}
    
